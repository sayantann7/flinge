<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>flinge - Profile</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/profile.css">
</head>
<body>
    <nav class="navbar">
        <a href="/" class="logo">flinge</a>
        <div class="nav-links">
            <a href="/home">Home</a>
            <button onclick="document.getElementById('recommendationsPopup').classList.add('active')">Recommendations</button>
            <a href="/profile">Profile</a>
            <a href="/logout">Logout</a>
        </div>
    </nav>

    <div class="container">
        <div class="profile-header">
            <div class="profile-pic-container">
                <% if (user.profilePic) { %>
                    <img src="/images/uploads/<%= user.profilePic %>" alt="Profile Picture" class="profile-pic">
                <% } else { %>
                    <img src="/images/default_profile_pic.jpg" alt="Profile Picture" class="profile-pic">
                <% } %>
                <button class="edit-profile-pic" onclick="document.getElementById('editProfilePicPopup').classList.add('active')">✏️</button>
            </div>
            <h2><%= user.fullname %></h2>
            <h4>@<%= user.username %></h4>
            <% if (user.bio) { %>
                <p><%= user.bio %></p>
            <% } else { %>
                <p>No bio added yet</p>
            <% } %>
            <button class="edit-about" onclick="document.getElementById('editBioPopup').classList.add('active')">
                ✏️ Edit Bio
            </button>
            <div class="profile-stats">
                <div class="stat-box">
                    <div class="stat-number"><%= user.userPosts.length %></div>
                    <div>Posts</div>
                </div>
                <div class="stat-box">
                    <div class="stat-number"><%= user.fanPages.length %></div>
                    <div>Fan Pages</div>
                </div>
            </div>
        </div>

        <div class="profile-content">
            <div class="profile-posts">
                <h2>Recent Posts</h2>
                <% if (user.userPosts.length > 0) { %>
                    <div class="post">
                        <div class="post-header">
                            <img src="https://via.placeholder.com/40" alt="User">
                            <div>
                                <h3>John Doe</h3>
                                <small>2 hours ago</small>
                            </div>
                        </div>
                        <p>Just finished watching The Shawshank Redemption again. This movie never gets old!</p>
                        <div class="post-actions">
                            <button>❤️ Like <span class="like-count">42</span></button>
                        </div>
                    </div>
                <% } else { %>
                    <p>No posts yet...</p>
                <% } %>
            </div>

            <div class="profile-info">
                <h2>About</h2>
                <p>Joined : <%= joinedDate %></p>
                <% if (user.about.genres) { %>
                    <p>Favorite Genres: <%= user.about.genres %></p>
                <% } else { %>
                    <p>Favorite Genres: No favorite genres added yet...</p>
                <% } %>
                <% if (user.about.directors) { %>
                    <p>Favorite Directors: <%= user.about.directors %></p>
                <% } else { %>
                    <p>Favorite Directors: No favorite directors added yet...</p>
                <% } %>
                <button class="edit-about" onclick="document.getElementById('editAboutPopup').classList.add('active')">
                    ✏️ Edit About
                </button>
            </div>
        </div>
    </div>

    <!-- Edit Profile Picture Popup -->
    <div id="editProfilePicPopup" class="popup-overlay">
        <div class="popup">
            <button class="close-popup" onclick="document.getElementById('editProfilePicPopup').classList.remove('active')">×</button>
            <h2>Update Profile Picture</h2>
            <form action="/edit-profilePic" method="post" enctype="multipart/form-data">
                <input name="profilePic" type="file" accept="image/*">
                <button type="submit" class="btn btn-primary" style="margin-top: 1rem;">Upload Picture</button>
            </form>
        </div>
    </div>

    <!-- Edit About Popup -->
    <div id="editAboutPopup" class="popup-overlay">
        <div class="popup">
            <button class="close-popup" onclick="document.getElementById('editAboutPopup').classList.remove('active')">×</button>
            <h2>Edit About</h2>
            <form action="/edit-about" method="post">
                <div class="form-group">
                    <label>Favorite Genres</label>
                    <input name="genres" type="text" value="<%= user.about.genres %>">
                </div>
                <div class="form-group">
                    <label>Favorite Directors</label>
                    <input name="directors" type="text" value="<%= user.about.directors %>">
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top: 1rem;">Save Changes</button>
            </form>
        </div>
    </div>

    <!-- Edit Bio Popup -->
    <div id="editBioPopup" class="popup-overlay">
        <div class="popup">
            <button class="close-popup" onclick="document.getElementById('editBioPopup').classList.remove('active')">×</button>
            <h2>Edit About</h2>
            <form action="/edit-bio" method="post">
                <div class="form-group">
                    <label>Bio</label>
                    <input name="bio" type="text" value="<%= user.bio %>">
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top: 1rem;">Save Changes</button>
            </form>
        </div>
    </div>

    <!-- Recommendations Popup -->
    <div id="recommendationsPopup" class="popup-overlay">
        <div class="popup">
            <button class="close-popup" onclick="document.getElementById('recommendationsPopup').classList.remove('active')">×</button>
            <h2>Your Movie Recommendations</h2>
            <p>Based on your interests and activity</p>
            
            <div class="recommendations-grid">
                <div class="movie-recommendation">
                    <img src="https://via.placeholder.com/300x400" alt="Interstellar">
                    <div class="movie-info">
                        <h3>Interstellar</h3>
                        <p>Sci-Fi, Adventure</p>
                        <p class="recommendation-reason">Because you liked Inception</p>
                    </div>
                </div>

                <div class="movie-recommendation">
                    <img src="https://via.placeholder.com/300x400" alt="The Dark Knight">
                    <div class="movie-info">
                        <h3>The Dark Knight</h3>
                        <p>Action, Drama</p>
                        <p class="recommendation-reason">From your favorite director Christopher Nolan</p>
                    </div>
                </div>

                <div class="movie-recommendation">
                    <img src="https://via.placeholder.com/300x400" alt="Goodfellas">
                    <div class="movie-info">
                        <h3>Goodfellas</h3>
                        <p>Crime, Drama</p>
                        <p class="recommendation-reason">Similar to The Godfather</p>
                    </div>
                </div>

                <div class="movie-recommendation">
                    <img src="https://via.placeholder.com/300x400" alt="Memento">
                    <div class="movie-info">
                        <h3>Memento</h3>
                        <p>Thriller, Mystery</p>
                        <p class="recommendation-reason">Based on your interest in complex narratives</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>